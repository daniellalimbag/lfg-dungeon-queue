{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build LFG Dungeon Queue (MinGW)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++20",
        "-O2",
        "-Wall",
        "-Wextra",
        "-pedantic",
        "player.cpp",
        "party.cpp",
        "dungeoninstance.cpp",
        "queuemanager.cpp",
        "utils.cpp",
        "main.cpp",
        "-o",
        "lfg_dungeon_queue.exe",
        "-pthread"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
